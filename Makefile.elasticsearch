elasticsearch:
	@if [ "${r}" = "reinit" ]; then\
		if [ ! -z ${r} ] && [ "${s}" != "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{"${s}": True}' --tags='reinit';\
			else\
				echo "No actions to configure elasticsearch";\
			fi\
		elif [ ! -z ${r} ] && [ "${s}" = "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{elasticsearch_all: True}' --tags='reinit';\
			else\
				echo "No actions to configure elasticsearch";\
			fi\
		else\
			echo "No Actions to configure elasticsearch";\
		fi;\
	elif [ "${r}" = "prepare" ]; then\
		if [ ! -z ${r} ] && [ "${s}" != "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{"${s}": True}' --tags='prepare';\
			else\
				echo "No actions to configure elasticsearch";\
			fi\
		elif [ ! -z ${r} ] && [ "${s}" = "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{elasticsearch_all: True}' --tags='prepare';\
			else\
				echo "No actions to configure elasticsearch";\
			fi\
		else\
			echo "No Actions to configure elasticsearch";\
		fi;\
	elif [ "${r}" = "install" ]; then\
		if [ ! -z ${r} ] && [ "${s}" != "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{"${s}": True}' --tags='install';\
			else\
				echo "No actions to install elasticsearch";\
			fi\
		elif [ ! -z ${r} ] && [ "${s}" = "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{elasticsearch_all: True}' --tags='install';\
			else\
				echo "No actions to install elasticsearch";\
			fi\
		else\
			echo "No actions to install elasticsearch";\
		fi;\
	elif [ "${r}" = "uninstall" ]; then\
		if [ ! -z ${r} ] && [ "${s}" != "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{"${s}": True}' --tags='uninstall';\
			else\
				echo "No actions to uninstall elasticsearch";\
			fi\
		elif [ ! -z ${r} ] && [ "${s}" = "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{elasticsearch_all: True}' --tags='uninstall';\
			else\
				echo "No actions to uninstall elasticsearch";\
			fi\
		fi;\
	elif [ "${r}" = "upgrade" ]; then\
		if [ ! -z ${r} ] && [ "${s}" != "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{"${s}": True}' --tags='upgrade';\
			else\
				echo "No actions to uninstall elasticsearch";\
			fi\
		elif [ ! -z ${r} ] && [ "${s}" = "all" ]; then\
			if [ -z ${c} ];  then\
				ansible-playbook --ssh-common-args='-o UserKnownHostsFile=./known_hosts' -u ${USERNAME} setup-elasticsearch.yml -e '{elasticsearch_all: True}' --tags='upgrade';\
			else\
				echo "No actions to uninstall elasticsearch";\
			fi\
		else\
			echo "No actions to uninstall elasticsearch";\
		fi;\
	else\
		echo "No actions to elasticsearch role";\
		exit;\
	fi

