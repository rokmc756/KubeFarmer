{% for n in range(0,mariadb.replica|int) %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-mariadb-galera-{{ n }}
  namespace: mariadb
spec:
  storageClassName: mariadb-storage
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
{% endfor %}

