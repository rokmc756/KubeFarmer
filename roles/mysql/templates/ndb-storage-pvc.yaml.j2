{% for n in range(0,mysql.ndb.replica|int) %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-mysql-ndb-{{ n }}
  namespace: mysql-ndb
spec:
  storageClassName: mysql-ndb-storage
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
{% endfor %}

