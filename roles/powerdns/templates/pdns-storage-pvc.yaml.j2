---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-pdns-mariadb-master-0
  namespace: {{ _powerdns.namespace }}
spec:
  storageClassName: {{ _powerdns.storage_class }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-pdns-mariadb-slave-0
  namespace: {{ _powerdns.namespace }}
spec:
  storageClassName: {{ _powerdns.storage_class }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi

