---
apiVersion: v1
kind: Service
metadata:
  name: geode
  namespace: {{ _geode.service.metadata.namespace }}
  annotations:
    nginx.ingress.kubernetes.io/proxy-protocol: "true"
spec:
  ports:
    - name: http
      protocol: TCP
      port: 7070
      targetPort: 7070
  type: LoadBalancer
  loadBalancerIP: {{ _geode.lb.ip_addr }}

