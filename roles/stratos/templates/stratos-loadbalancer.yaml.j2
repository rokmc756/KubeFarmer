apiVersion: v1
kind: Service
metadata:
  name: stratos-console-ui-ext
  namespace: {{ stratos.service.metadata.namespace }}
  annotations:
    nginx.ingress.kubernetes.io/proxy-protocol: "true"
spec:
  ports:
    - name: https
      protocol: TCP
      port: 443
      targetPort: 443
  type: LoadBalancer
  loadBalancerIP: {{ stratos.lb_ip_addr }}
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ stratos.ingress.metadata.name }}
  namespace: {{ stratos.ingress.metadata.namespace }}
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "true"
spec:
  rules:
    - host: {{ stratos.ingress.hostname }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: stratos-portal
                port:
                  name: http

