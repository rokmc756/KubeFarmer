---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: prometheus-server
  namespace: {{ _prometheous.namespace }}
spec:
  ingressClassName: {{ _nginx.ingress.class_name }}
  tls:
  - hosts:
    - "*.{{ _nginx.ingress.hostname }}"
    secretName: secret-tls
  rules:
  - host: "prometheus-server.{{ _nginx.ingress.domain }}"
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: prometheus-server
            port:
              number: 80
