{% for h in groups["workers"] %}
{% for n in range(0, total_kibana_containers|int) %}
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: kibana-pv-{{ hostvars[h]['ansible_hostname'] }}-{{ n }}
  namespace: {{ _kibana.namespace }}
spec:
  capacity:
    storage: 15Gi
  volumeMode: Filesystem
  accessModes:
  - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: {{ _kibana.storage_class }}
  local:
    path: {{ _kibana.storage_path }}-{{ n }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ hostvars[h]['ansible_hostname'] }}
{% endfor %}
{% endfor %}

