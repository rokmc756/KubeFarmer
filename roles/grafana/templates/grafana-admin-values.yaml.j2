---
image:
  repository: ngoduykhanh/grafana-admin
  tag: v0.2.4
  pullPolicy: IfNotPresent


env:
  TZ: UTC
  SECRET_KEY: changeme
  GUNICORN_TIMEOUT: 60
  GUNICORN_WORKERS: 2
  GUNICORN_LOGLEVEL: DEBUG


#  tls:
#    enabled: true
#    certSource: secret
#    auto:
#      commonName: ""
#    secret:
#      secretName: "grafana-cert"
#      notarySecretName: "grafana-cert"


service:
  main:
    enabled: true
    type: LoadBalancer
    loadBalancerIP: "192.168.1.223"
    ports:
      http:
        port: 80


ingress:
  main:
    enabled: true


persistence:
  config:
    enabled: true
    type: pvc
    storageClass: grafana-storage
    existingClaim: grafana-admin-data
    accessMode: ReadWriteOnce
    size: 10Gi


