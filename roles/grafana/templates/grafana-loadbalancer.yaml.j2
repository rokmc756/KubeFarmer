---
apiVersion: v1
kind: Service
metadata:
  name: grafana-udp-lb
  namespace: grafana
  annotations:
    nginx.ingress.kubernetes.io/proxy-protocol: "true"
spec:
  selector:
    app: grafana-udp
  ports:
    - name: grafana-udp
      protocol: UDP
      port: 53
      targetPort: 53
  type: LoadBalancer
  loadBalancerIP: 192.168.1.221
---
apiVersion: v1
kind: Service
metadata:
  name: grafana-tcp-lb
  namespace: grafana
  annotations:
    nginx.ingress.kubernetes.io/proxy-protocol: "true"
spec:
  selector:
    app: grafana-tcp
  ports:
    - name: grafana-tcp
      protocol: TCP
      port: 53
      targetPort: 53
  type: LoadBalancer
  loadBalancerIP: 192.168.1.222

