---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ awx.ingress.metadata.name }}
  namespace: {{ awx.ingress.metadata.namespace }}
  annotations:
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
spec:
  rules:
    - host: {{ awx.ingress.hostname }}
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: awx-service
                port:
                  name: http
