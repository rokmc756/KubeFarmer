## @param mode MinIO&reg; server mode (`standalone` or `distributed`)
## ref: https://docs.elasticsearch.io/docs/distributed-elasticsearch-quickstart-guide

mode: distributed
auth:
  rootUser: admin
  rootPassword: "changeme"
  existingSecret: ""
  rootUserSecretKey: ""
  rootPasswordSecretKey: ""
  forcePassword: false
  useCredentialsFiles: false
  useSecret: true
  forceNewKeys: false


disableWebUI: false


tls:
  enabled: false
  autoGenerated: false
  existingSecret: ""
  mountPath: ""


schedulerName: ""
terminationGracePeriodSeconds: ""
deployment:
  updateStrategy:
    type: Recreate


statefulset:
  updateStrategy:
    type: RollingUpdate
  podManagementPolicy: Parallel
  replicaCount: {{ _elasticsearch.replica|int }}
  zones: 1
  drivesPerNode: 1


provisioning:
  enabled: false
  sleepTime: 5
  resourcesPreset: "nano"
  resources: {}
  networkPolicy:
    enabled: true
    allowExternalEgress: true


automountServiceAccountToken: false


containerPorts:
  api: 9000
  console: 9001


resourcesPreset: "micro"
resources: {}

service:
  type: ClusterIP
  ports:
    api: 9000
    console: 9001


ingress:
  enabled: false
  apiVersion: ""
  ingressClassName: ""
  hostname: elasticsearch.local
  path: /
  pathType: ImplementationSpecific
  servicePort: elasticsearch-console
  tls: false
  selfSigned: false


apiIngress:
  enabled: false
  apiVersion: ""
  ingressClassName: ""
  hostname: elasticsearch.local
  path: /
  pathType: ImplementationSpecific
  servicePort: elasticsearch-api
  tls: false
  selfSigned: false


networkPolicy:
  enabled: true
  allowExternal: true
  allowExternalEgress: true


persistence:
  enabled: true
  storageClass: "{{ _elasticsearch.storage_class }}"
  mountPath: /bitnami/elasticsearch/data
  accessModes:
    - ReadWriteOnce
  size: 8Gi


volumePermissions:
  enabled: false
  resourcesPreset: "nano"


serviceAccount:
  create: true
  name: ""
  automountServiceAccountToken: false


pdb:
  create: true
  minAvailable: ""
  maxUnavailable: ""


metrics:
  prometheusAuthType: public
  enabled: false
  serviceMonitor:
    enabled: false
    namespace: ""
    labels: {}
    jobLabel: ""
    paths:
      - /elasticsearch/v2/metrics/cluster
      - /elasticsearch/v2/metrics/node
    interval: 30s
    scrapeTimeout: ""
  prometheusRule:
    enabled: false
    namespace: ""

