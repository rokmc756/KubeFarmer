{% for n in range(0,pgsql.patroni.replica|int) %}
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: data-pgsql-patroni-postgresql-{{ n }}
  namespace: {{ pgsql.patroni.service.metadata.namespace }}
spec:
  storageClassName: {{ pgsql.patroni.storage_class }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
{% endfor %}

