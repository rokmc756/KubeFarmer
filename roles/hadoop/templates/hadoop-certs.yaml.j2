---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: istio-ingressgateway-certs
  namespace: istio-system
spec:
  commonName: istio-ingressgateway.istio-system.svc
  ipAddresses:
    - {{ hadoop.lb_ip_addr }}
  isCA: true
  issuerRef:
    kind: ClusterIssuer
    name: hadoop-self-signing-issuer
  secretName: istio-ingressgateway-certs
